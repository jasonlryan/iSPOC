{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["DOM", "ES2015", "ES2016", "ES2017", "ESNext"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ]
}
